<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="#d1d1d1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tv_archive_category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UX 디자인"
            android:fontFamily="@font/nanum_barungothic_regular"
            android:textSize="17sp"
            android:textColor="#000000"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <View
        android:background="#d1d1d1"
        android:layout_width="match_parent"
        android:layout_height="0.6dp" />

    <FrameLayout
        android:id="@+id/container_archive_archive_list_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>