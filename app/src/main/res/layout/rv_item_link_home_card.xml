<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="260dp"
                                                   android:layout_height="360dp"
                                                   android:id="@+id/container_rv_item_l_home_card">


    <ImageView
            android:background="@drawable/link_home_card_round"
            android:layout_width="260dp"
            android:layout_height="260dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/img_rv_item_l_home_card"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
    />

    <TextView
        android:id="@+id/txt_rv_item_l_home_card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/nanum_barungothic_bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_rv_item_l_home_card"
        tools:text="지금 바로 시작할 수 있는\n린 브랜드 방법론" />

    <TextView
        android:id="@+id/txt_rv_item_l_home_card_curator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nanum_barungothic_regular"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/txt_rv_item_l_home_card_title"
        app:layout_constraintTop_toBottomOf="@+id/txt_rv_item_l_home_card_title"
        tools:text="김가형 큐레이터" />
</androidx.constraintlayout.widget.ConstraintLayout>