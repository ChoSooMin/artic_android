<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/search_result_archive_tab"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/img_search_result_tab_archive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_search_result_tab_archive"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="-5dp"
            android:layout_toRightOf="@id/tv_search_result_tab_archive"
            android:src="@drawable/dot" />

        <TextView
            android:id="@+id/tv_search_result_tab_archive"
            style="@style/Text.NanumB.14s.23h.BrownGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="아카이브" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/search_result_link_tab"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/img_search_result_tab_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_search_result_tab_article"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="-5dp"
            android:layout_toRightOf="@id/tv_search_result_tab_article"
            android:src="@drawable/dot"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_search_result_tab_article"
            style="@style/Text.NanumB.14s.23h.BrownGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="아티클" />
    </RelativeLayout>
</LinearLayout>
