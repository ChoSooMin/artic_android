<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeActivity">
    <ImageView
            android:src="@drawable/artic_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_home_artic_logo"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp"/>
    <TextView
            android:text="@string/home_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_home_welcome" android:layout_marginTop="67dp"
            app:layout_constraintTop_toBottomOf="@+id/img_home_artic_logo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" android:textSize="22sp" android:textColor="@color/black"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/very_light_pink_round"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="26dp" app:layout_constraintTop_toBottomOf="@+id/txt_home_welcome"
            android:layout_marginStart="19dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="19dp"
            android:id="@+id/constraintLayout">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintHorizontal_bias="0.0"
                  app:layout_constraintVertical_bias="1.0" android:text="@string/home_search_hint"
                  android:layout_marginTop="16dp" android:layout_marginBottom="16dp" android:layout_marginStart="46dp"/>
        <ImageView
                android:src="@drawable/ic_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="13dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="360dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"/>
</androidx.constraintlayout.widget.ConstraintLayout>