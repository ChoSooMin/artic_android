<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.setting.setting_editprofile.SettingEditProfileActivity">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="55.6dp"
        android:background="@color/white"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nanum_barungothic_regular"
            android:includeFontPadding="false"
            android:text="프로필 수정"
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/edit_profile_finish_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="완료"
            android:textSize="17sp"
            android:layout_marginRight="20dp"
            android:textColor="@color/brownish_grey"
            android:includeFontPadding="false"
            android:fontFamily="@font/nanum_barungothic_regular"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-193dp"
            android:background="#d1d1d1" />
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/edit_profile_img"
        android:layout_width="106dp"
        android:layout_height="106dp"
        android:layout_marginStart="127dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/profile"
        app:layout_constraintBottom_toTopOf="@+id/edit_profile_img_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <TextView
        android:id="@+id/edit_profile_img_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="127dp"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="25dp"
        android:text="프로필 사진 바꾸기"
        android:textColor="@color/soft_blue"
        android:textSize="14sp"
        android:fontFamily="@font/nanum_barungothic_regular"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toTopOf="@+id/edit_profile_name_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginTop="255dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#d1d1d1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginTop="380dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#d1d1d1"/>

    <TextView
        android:id="@+id/edit_profile_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/nanum_barungothic_light"
        android:includeFontPadding="false"
        android:text="이름"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit_profile_name_et" />


    <TextView
        android:id="@+id/edit_profile_myinfo_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="33dp"
        android:fontFamily="@font/nanum_barungothic_light"
        android:includeFontPadding="false"
        android:text="내 소개"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_name_txt" />

    <EditText
        android:id="@+id/edit_profile_name_et"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginTop="206dp"
        android:ems="10"
        android:hint="이름"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/edit_profile_name_txt"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />


    <EditText
        android:id="@+id/editText4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="내 소개"
        android:inputType="textMultiLine"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/edit_profile_myinfo_txt"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_name_et" />


</androidx.constraintlayout.widget.ConstraintLayout>