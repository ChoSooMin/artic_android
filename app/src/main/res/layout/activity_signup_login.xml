<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    tools:context=".ui.signup.SignupLoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/homeAsUpIndicator"
            android:layout_marginTop="53dp"
            />
        <TextView
            android:id="@+id/signup_login_next_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/nanumbarungothic"
            android:textColor="@color/brownish_grey"
            android:includeFontPadding="false"
            android:textSize="17sp"
            android:layout_marginTop="53dp"
            android:layout_marginRight="20dp"
            android:text="다음"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="43dp"
        android:paddingRight="170dp"
        android:paddingBottom="74dp">
    <TextView
        android:id="@+id/email_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:includeFontPadding="false"
        android:fontFamily="@font/nanumbarungothicbold"
        android:textColor="@color/black"
        android:textSize="21sp"
        />
        <TextView
            android:id="@+id/signup_login_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="과 "
            android:includeFontPadding="false"
            android:fontFamily="@font/nanumbarungothiclight"
            android:textSize="21sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/email_txt"/>
        <TextView
            android:id="@+id/password_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:includeFontPadding="false"
            android:fontFamily="@font/nanumbarungothicbold"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:layout_toRightOf="@id/signup_login_txt1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/password_txt"
            android:includeFontPadding="false"
            android:fontFamily="@font/nanumbarungothiclight"
            android:textSize="21sp"
            android:textColor="@color/black"
            android:text="를"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_txt"
            android:text="알려주세요!"
            android:includeFontPadding="false"
            android:fontFamily="@font/nanumbarungothiclight"
            android:textSize="21sp"
            android:textColor="@color/black"/>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:includeFontPadding="false"
        android:fontFamily="@font/nanumbarungothic"
        android:textColor="@color/black"
        android:textSize="16sp"/>
    <EditText
        android:id="@+id/signup_login_edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="36dp"
        android:layout_marginTop="10dp"
        android:hint="artic@gmail.com"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:includeFontPadding="false"
        android:layout_marginTop="54dp"
        android:fontFamily="@font/nanumbarungothic"
        android:textColor="@color/black"
        android:textSize="16sp"/>
    <EditText
        android:id="@+id/signup_login_edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="36dp"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:hint="영문,숫자 포함 8자리 이상"/>


</LinearLayout>