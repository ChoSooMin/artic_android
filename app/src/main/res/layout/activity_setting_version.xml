<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.setting.setting_version.SettingVersionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f9f9f9"
        android:orientation="vertical">

        <TextView
            style="@style/Text.NanumR.14s.23h.BrownishGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:text="지원환경 android 10.0 이상" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/version_artic_img"
                android:layout_width="114dp"
                android:layout_height="114dp"
                android:layout_marginStart="132dp"
                android:layout_marginTop="39dp"
                android:layout_marginEnd="132dp"
                android:src="@drawable/versionicon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/version_info_txt"
                style="@style/Text.NanumL.14s.21h.BrownishGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="140dp"
                android:layout_marginEnd="140dp"
                android:text="현재버전 1.0.1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/version_artic_img" />

            <TextView
                android:id="@+id/tv_act_setting_version_version_info"
                style="@style/Text.NanumL.14s"
                android:layout_width="182dp"
                android:layout_height="34dp"
                android:layout_marginStart="89dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="89dp"
                android:layout_marginBottom="22dp"
                android:background="@drawable/round_brownish_grey_border"
                android:gravity="center"
                android:text="현재 최신 버전입니다."
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/version_info_txt" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/white">

        <TextView
            style="@style/Text.NanumR.17s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="버전정보" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#d1d1d1" />
</LinearLayout>
