<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.signup.signup_start.SignupStartActivity">

    <ImageView
        android:id="@+id/img_act_signup_start_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="205dp"
        android:src="@drawable/artic_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relative_act_signup_start_facebook_login">

        <LinearLayout
            android:id="@+id/linear_act_signup_go_to_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="6dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp">

            <TextView
                style="@style/Text.NanumL.14s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그인 하기" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="-2dp"
                android:background="#242424" />
        </LinearLayout>

        <TextView
            style="@style/Text.NanumL.12s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="이미 회원이시면," />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative_act_signup_start_facebook_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="85dp"
        android:background="@drawable/round_kakao_login_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relative_act_signup_start_email_login">

        <ImageView
            android:id="@+id/img_ic_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/ic_facebook" />

        <TextView
            style="@style/Text.NanumL.14s.21h.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="26dp"
            android:layout_toRightOf="@id/img_ic_facebook"
            android:text="페북으로 시작하기" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_act_signup_start_email_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="85dp"
        android:background="@drawable/round_email_login_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_act_signup_start_logo">

        <ImageView
            android:id="@+id/img_ic_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_mail" />

        <TextView
            style="@style/Text.NanumL.14s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="26dp"
            android:layout_toRightOf="@id/img_ic_mail"
            android:text="이메일로 시작하기" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
