<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv_item_mypage_scrap_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/rv_item_mypage_scrap_img"
        android:layout_width="0dp"
        android:layout_height="193dp"
        android:background="@drawable/archive_card_round"
        android:scaleType="centerCrop"
        android:src="@drawable/scrap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rv_item_mypage_scrap_title"
        style="@style/Text.AvenirB.13s.20h.White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/rv_item_mypage_scrap_img"
        app:layout_constraintTop_toTopOf="@+id/rv_item_mypage_scrap_img"
        tools:text="Management" />

    <TextView
        android:id="@+id/rv_item_mypage_scrap_txt"
        style="@style/Text.NanumR.14s.23h.White"
        android:layout_width="0dp"
        android:layout_height="99dp"
        android:layout_below="@id/rv_item_mypage_scrap_title"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="@+id/rv_item_mypage_scrap_img"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_item_mypage_scrap_title"
        tools:text="팀을 훌륭하게 이끄는 멋진 리더가 되려면 어떻게 해야할까요?" />
</androidx.constraintlayout.widget.ConstraintLayout>
