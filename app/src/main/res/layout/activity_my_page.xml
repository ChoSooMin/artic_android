<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/include3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ui.mypage.mypage.MyPageActivity">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/nanum_barungothic_regular"
                    android:includeFontPadding="false"
                    android:text="artic"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <ImageButton
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/btn_setting" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#d1d1d1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@color/white"
                android:paddingLeft="20dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_img"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginTop="32dp"
                    android:src="@drawable/profile" />

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="49dp"
                    android:layout_toRightOf="@id/profile_img"
                    android:fontFamily="@font/nanum_barungothic_bold"
                    android:includeFontPadding="false"
                    android:text="이아틱"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_name"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/profile_img"
                    android:fontFamily="@font/nanum_barungothic_light"
                    android:text="articcrew@gmail.com"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/very_light_pink"
                android:paddingBottom="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="93dp"
                    android:background="@color/white"
                    android:paddingBottom="30dp">

                    <TextView
                        android:id="@+id/introduce_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/nanum_barungothic_regular"
                        android:includeFontPadding="false"
                        android:text="내 소개"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/my_introduce_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/introduce_txt"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginRight="72dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/nanum_barungothic_light"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="11sp"
                        android:maxLines="2"
                        android:text="저는 10년 동안 유엑스에 매진하였고, 총 3번의 아카데미를 수료한 경험이 있습니다."
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </RelativeLayout>

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/mypage_tab_scrap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/tv_act_my_page_scrap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_barungothic_bold"
                        android:includeFontPadding="false"
                        android:text="스크랩"
                        android:textColor="@color/soft_blue"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/tv_act_my_page_scrap"
                        android:src="@drawable/dot" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mypage_tab_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/tv_act_my_page_me"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:fontFamily="@font/nanum_barungothic_regular"
                        android:includeFontPadding="false"
                        android:text="나"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </RelativeLayout>


                <ImageButton
                    android:id="@+id/mypage_tab_plus_btn"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/btn_plus" />
            </LinearLayout>


            <FrameLayout
                android:id="@+id/mypage_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </FrameLayout>


        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/include3"
        layout="@layout/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>