<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_page_tablayout_srcap"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_my_page_tablayout_scrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nanum_barungothic_regular"
            android:text="스크랩"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <ImageView
            android:id="@+id/img_my_page_tablayout_scrap"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginStart="2dp"
            app:layout_constraintBottom_toTopOf="@+id/txt_my_page_tablayout_scrap"
            app:layout_constraintStart_toEndOf="@+id/txt_my_page_tablayout_scrap"
            app:srcCompat="@drawable/btn_blue_round" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_page_tablayout_me"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_my_page_tablayout_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nanum_barungothic_regular"
            android:text="내 아카이브"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <ImageView
            android:id="@+id/img_my_page_tablayout_me"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginStart="2dp"
            app:layout_constraintBottom_toTopOf="@+id/txt_my_page_tablayout_me"
            app:layout_constraintStart_toEndOf="@+id/txt_my_page_tablayout_me"
            app:srcCompat="@drawable/btn_blue_round" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>